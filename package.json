{
  "name": "pdagro",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "knex": "knex",
    "installdb": "knex migrate:rollback --all && npm run migrate && npm run seed",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "docs": "typedoc --out ./docs ./src",
    "tsc": "tsc",
    "swagger": "node src/swagger.js",
    "build": "npm run tsc",
    "dev": "nodemon --watch src/ --exec ts-node src/pdagro.ts -e ts",
    "prod": "pm2 stop pdagro && npm run build && pm2 start ./dist/pdagro.js",
    "start": "npm run build && node ./dist/pdagro.js",
    "pretest": "knex migrate:rollback --all && npm run migrate && npm run seed",
    "test": "jest --coverage --no-cache --setupFiles dotenv/config"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "mongodb": "^4.7.0",
    "morgan": "~1.9.1",
    "nodemailer": "^6.8.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.25",
    "@types/nodemailer": "^6.4.6",
    "swagger-autogen": "^2.22.0",
    "swagger-ui-express": "^4.6.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
